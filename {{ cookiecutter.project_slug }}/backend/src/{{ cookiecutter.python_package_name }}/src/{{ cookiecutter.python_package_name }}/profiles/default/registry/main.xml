<?xml version="1.0"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="{{ cookiecutter.python_package_name }}"
>

  <record field="site_title"
          interface="Products.CMFPlone.interfaces.controlpanel.ISiteSchema"
          name="plone.site_title"
  >
    <value>{{ cookiecutter.project_title }}</value>
  </record>

  <record field="types_not_searched"
          interface="Products.CMFPlone.interfaces.controlpanel.ISearchSchema"
          name="plone.types_not_searched"
  >
    <value>
      <element>Discussion Item</element>
      <element>Image</element>
      <element>Link</element>
      <element>Plone Site</element>
      <element>TempFolder</element>
    </value>
  </record>

  <record field="displayed_types"
          interface="Products.CMFPlone.interfaces.controlpanel.INavigationSchema"
          name="plone.displayed_types"
  >
    <value>
      <element>Document</element>
      <element>Folder</element>
      <element>Link</element>
    </value>
  </record>

</registry>
